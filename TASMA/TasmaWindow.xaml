<Window x:Class="TASMA.TasmaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TASMA"
        mc:Ignorable="d"
        Title="TasmaWindow" Height="400" Width="600" BorderBrush="Gray" BorderThickness="1" WindowStyle="None" AllowsTransparency="True" MouseLeftButtonDown="OnLeftMouseButtonDown" Closed="OnClosed">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="8.5*"/>
        </Grid.RowDefinitions>
        <Border BorderThickness="0,0,0,2" BorderBrush="DimGray"/>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                
                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Text="TASMA" FontFamily="Segoe UI" FontSize="25" FontWeight="Bold" Foreground="Indigo" Margin="15, 0, 0, 0" VerticalAlignment="Bottom"/>
                    <TextBlock Text="Tanzania Student Management Application" FontFamily="Segoe UI" FontSize="8" Foreground="Gray" Margin="15, 0, 0, 0" VerticalAlignment="Top"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1">
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">

                </StackPanel>
            </Grid>
            
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="8*"/>
            </Grid.ColumnDefinitions>
            <Border BorderThickness="0,0,2,0" BorderBrush="DimGray" />
            <Grid Grid.Column="0">
                <StackPanel VerticalAlignment="Top">
                    <Button HorizontalAlignment="Stretch" Height="40" Content="Sample"/>
                    <Button HorizontalAlignment="Stretch" Height="40" Content="Sample"/>
                    <Button HorizontalAlignment="Stretch" Height="40" Content="Sample"/>
                    <Button HorizontalAlignment="Stretch" Height="40" Content="Sample"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1">
                <Frame Name="TasmaWindow_PageFrame">
                    
                </Frame>
            </Grid>
        </Grid>
    </Grid>
</Window>
